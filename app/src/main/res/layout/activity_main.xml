    <Button
        android:id="@+id/addpic"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
       android:layout_gravity="bottom"
        android:layout_margin="140dp"
        android:text="add Photo" />

</FrameLayout>